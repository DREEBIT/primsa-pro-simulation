{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types",
      "./src/typings.d.ts"
    ]
  },
  "include": [
    "src/**/*",
    "src/typings.d.ts"
  ]
}
